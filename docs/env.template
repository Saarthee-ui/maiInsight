# ============================================
# SaarInsights Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Command: copy env.template .env
# ============================================

# ============================================
# LLM Configuration
# ============================================
# Choose ONE provider: openai, anthropic, or ollama
LLM_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Configuration (if using Ollama - free, local)
# First install Ollama from https://ollama.ai
# Then run: ollama pull llama3.1
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Warehouse Configuration
# ============================================
# Choose: snowflake, bigquery, or postgres
WAREHOUSE_TYPE=snowflake

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your_account_here
SNOWFLAKE_USER=your_username_here
SNOWFLAKE_PASSWORD=your_password_here
SNOWFLAKE_WAREHOUSE=your_warehouse_name
SNOWFLAKE_DATABASE=your_database_name
SNOWFLAKE_SCHEMA_BRONZE=BRONZE
SNOWFLAKE_SCHEMA_SILVER=SILVER
SNOWFLAKE_SCHEMA_GOLD=GOLD

# BigQuery Configuration (if using BigQuery)
# BIGQUERY_PROJECT=your_project_id
# BIGQUERY_DATASET_BRONZE=BRONZE
# BIGQUERY_DATASET_SILVER=SILVER
# BIGQUERY_DATASET_GOLD=GOLD

# PostgreSQL Configuration (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=saarinsights
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_SCHEMA_BRONZE=bronze
POSTGRES_SCHEMA_SILVER=silver
POSTGRES_SCHEMA_GOLD=gold

# ============================================
# AWS S3 Configuration (for S3 file loading)
# ============================================
# AWS Access Key (get from AWS IAM)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name  # Optional: default bucket name

# Note: You can also use AWS IAM roles (no credentials needed)
# Or AWS credentials file: ~/.aws/credentials

# ============================================
# State Storage
# ============================================
# Choose: sqlite (for development) or postgres (for production)
STATE_STORE_TYPE=sqlite
STATE_STORE_PATH=./storage/state.db

# PostgreSQL State Store (if using PostgreSQL for state)
# POSTGRES_STATE_STORE_URL=postgresql://user:password@localhost/dbname

# ============================================
# dbt Configuration
# ============================================
DBT_PROJECT_DIR=./dbt_project
DBT_PROFILES_DIR=~/.dbt

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Agent Configuration
# ============================================
# Temperature: Lower = more deterministic (0.0-1.0)
AGENT_TEMPERATURE=0.1
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT_SECONDS=300

